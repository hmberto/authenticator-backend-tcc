<!DOCTYPE configuration>

<configuration>
	<!-- <property name="LOG_DIR" value="./logs" /> -->
	<appender name="console"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				[%highlight(%level)] [%date{dd/MM/yyyy HH:mm:ss}] %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<root level="info">
		<appender-ref ref="console" />
	</root>
</configuration>